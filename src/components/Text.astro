---
// Henter parametrene fra Astro.props
const {
  teksttype = "maintext",
  stylingclasses = "",
  weight = "",
  color = "",
} = Astro.props;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  maintext: "text-[12px] lg:text-[20px]",
  smalltext: "text-[10px] lg:text-[16px]",
};

const fontWeight = {
  regular: "font-normal",
  bold: "font-bold",
  italic: "italic",
};

const fontColor = {
  black: "text-[var(--color-black)]",
  main: "text-[var(--color-main)]",
};
---

<p
  class:list={[
    sizeClasses[teksttype],
    stylingclasses,
    fontWeight[weight],
    fontColor[color],
  ]}
>
  <slot />
</p>
