---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import Picturecard from "../components/Picturecard.astro";
import Submitform from "../components/Submitform.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Whatis from "../components/Whatis.astro";
---

<MainLayout title="Komponentbibliotek">
  <main class="container mx-auto p-4 space-y-12 mt-40">
    <Heading htmlheading="h1" size="large" weight="bold" color="black" class="mb-1">
      Komponentbibliotek
    </Heading>
    
    
    <Text stylingclasses="italic">
      Her kan du finde alle vores egne komponenter, brugt i forskellige
      variationer.
    </Text>

    <hr class="my-6" />

    <!-- Typografi -->
    <section>
<Heading htmlheading="h2" size="medium" color="black">Typografi</Heading>
<Heading htmlheading="h1" size="large" color="red" font="display">H1 - overskrift</Heading>
<Heading htmlheading="h2" size="medium" color="red" font="display">H2 - overskrift</Heading>
<Heading htmlheading="h3" size="small" color="red" font="display">H3 - overskrift</Heading>

<Text teksttype="brødtekst">
Dette er en brødtekst med standard styling.
</Text>
    
    </section>

    <hr class="my-6" />

    <!-- Links -->
    <section>
      <Heading htmlheading="h2" size="medium">Links</Heading>
      <Text teksttype="brødtekst">
        <Link href="#">Default link</Link> indlejret i en paragraf.
      </Text>
      <Text>
        <Link href="#" variant="textlink">Link variant: textlink</Link>
      </Text>
    </section>

    <hr class="my-6" />

    <!-- Buttons -->
    <section>
      <Heading htmlheading="h2" size="medium">Buttons</Heading>
      <Button>Default knap</Button>
      <Button variant="primary" size="medium">Primary Medium</Button>
    </section>

    <hr class="my-6" />

    <!-- Picturecard -->
    <section>
      <Heading htmlheading="h2" size="medium">Picturecard</Heading>
      <div class="max-w-sm">
        <Picturecard
          imageSrc="/img/01-amager-faelled.webp"
          title="Amager Fælled"
          subtitle="Stefan Grage"
          text="Dette er en beskrivelse af billedet."
        />
      </div>
    </section>

    <hr class="my-6" />

    <!-- Submitform -->
    <section>
      <Heading htmlheading="h2" size="medium">Submitform</Heading>
      <Submitform />
    </section>

    <hr class="my-6" />

    <!-- Header & Footer -->
    <section>
      <Heading htmlheading="h2" size="medium">Header</Heading>
      <Text teksttype="brødtekst">(Se toppen af skærmen. Den er fixed og kommer derfor ikke ind her.)</Text>
    </section>

    <section>
      <Heading htmlheading="h2" size="medium">Footer</Heading>
      <Footer />
    </section>

    <hr class="my-6" />

    <!-- WhatIs -->
    <section>
      <Heading htmlheading="h2" size="medium">WhatIs-sektion</Heading>
      <Whatis />
    </section>
  </main>
</MainLayout>
